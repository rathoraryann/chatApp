{
    "builds": [
      {
        "src": "./app.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/vite.config.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/.*",
        "dest": "app.js"
      },
      {
        "src": "/.*",
        "dest": "/frontend/dist/index.html"
      }
    ]
  }
  